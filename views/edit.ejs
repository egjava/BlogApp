<%- include ("./partials/header.ejs") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" placeholder="Title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" placeholder="Image Link">
        </div>
       <div class="field">
           <label>Blog Content</label>
           <textarea name="blog[body]" ><%=blog.body%></textarea>
       </div>
       
        
        <button class="ui black basic button">Submit</button>
    </form>
</div>

<%- include ("./partials/footer.ejs") %>